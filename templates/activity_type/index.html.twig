{% extends 'base.html.twig' %}

{% block title %}ActivityType index{% endblock %}

{% block body %}
    <h1>ActivityType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity_type in activity_types %}
            <tr>
                <td>{{ activity_type.id }}</td>
                <td>{{ activity_type.title }}</td>
                <td>
                    <a href="{{ path('activity_type_show', {'id': activity_type.id}) }}">show</a>
                    <a href="{{ path('activity_type_edit', {'id': activity_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('activity_type_new') }}">Create new</a>
{% endblock %}